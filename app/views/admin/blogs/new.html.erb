<!-- additional style -->
<% content_for :admin_blog_style do %>
	<link rel="stylesheet" type="text/css" href="/lib/datepicker/css/datepicker.css">
<% end %>

<div class="container">
	<h2>Admin Panel</h2>

	<section id="edit_wrapper">
		<div class="row">
			<!-- Nav tabs -->
			<ul class="nav nav-tabs">
			  	<li class="col-xs-3 active"><a href="#blog" data-toggle="tab">Blog</a></li>
			  	<li class="col-xs-3"><a href="#portfolio" data-toggle="tab">Portfolio</a></li>
			  	<li class="col-xs-3"><a href="#resume" data-toggle="tab">Resume</a></li>
			  	<li class="col-xs-3"><a href="#contact" data-toggle="tab">Contact</a></li>
			</ul>
		</div>

		<div class="row">
			<!-- Tab panes -->
			<div class="tab-content">
				<!-- blog -->
			  	<div class="tab-pane active" id="blog">
			  		<%= form_for @blog do |f| %>
			  			<!-- date, title, detail -->
				  		<div class="col-xs-6" id="write_content">
				  			<div class="form-group">
							  	<%= f.label :title, :class => "col-xs-2" %>
							  	<div class="col-xs-10">
								  	<%= f.text_field :title, :class => "form-control" %><br />
								</div>
							</div>

							<div class="form-group">
								<%= f.label :date, :class => "col-xs-2" %>
							  	<div class="col-xs-10">
							  		<!-- datepicker -->
								  	<%= f.text_field :date, :class => "form-control datepicker", :data => { :provide => 'datepicker', :date_format => 'DD/mm/dd/yyyy' } %><br />
								</div>
							</div>

							<div class="form-group">
								<%= f.label :detail, :class => "col-xs-2" %>
							  	<div class="col-xs-10">
								  	<%= f.text_area :detail, :class => "form-control" %><br />
								</div>
							</div>
						</div>
						<!-- attachments -->
						<div class="col-xs-6" id="attachments">
							<div class="row">
								<!-- Nav tabs -->
								<ul class="nav nav-tabs">
								  	<li class="col-xs-4 active"><a href="#image" data-toggle="tab">Image</a></li>
								  	<li class="col-xs-4"><a href="#video" data-toggle="tab">Video</a></li>
								  	<li class="col-xs-4"><a href="#code" data-toggle="tab">Code</a></li>
								</ul>
							</div>

							<div class="row">
								<!-- Tab panes -->
								<div class="tab-content">
									<!-- blog -->
								  	<div class="tab-pane active" id="image">Upload image</div>
								  	<div class="tab-pane" id="video">upload video</div>
								  	<div class="tab-pane" id="code">upload code</div>
								</div>
							</div>
						</div>

						<!-- end of form content -->
						<div class="clearfix"></div>
						<%= f.submit :class => "btn btn-primary" %>
					<% end %>
			  	</div>
			  	
			  	<div class="tab-pane" id="portfolio">Portfolio edit area</div>
			  	<div class="tab-pane" id="resume">Resume edit area</div>
			  	<div class="tab-pane" id="contact">Contact edit area</div>
			</div>
		</div>
	</section>
</div>

<!-- additional js -->
<% content_for :admin_blog_js do %>
	<script type="text/javascript" src="/lib/datepicker/js/bootstrap-datepicker.js"></script>
	<script type="text/javascript" src="/js/admin_blog.js" ></script>
<% end %>